<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Força HTTPS (PRIMEIRO!)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Se for arquivo real (não reescreve)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Se for diretório real (não reescreve)
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Redireciona tudo para index.php (exceto arquivos/diretórios reais)
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Headers de segurança (LiteSpeed pode ignorar, mas não prejudica)
</IfModule>

# Desabilita listagem de diretórios
Options -Indexes
