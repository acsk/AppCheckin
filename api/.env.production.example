# ============ APP ============
APP_ENV=production
APP_DEBUG=false
APP_URL=https://api.appcheckin.com.br

# ============ CORS ============
# Domínios que podem acessar a API
CORS_ALLOWED_ORIGINS=https://appcheckin.com.br,https://www.appcheckin.com.br,https://app.appcheckin.com.br

# ============ TIMEZONE ============
APP_TIMEZONE=America/Sao_Paulo

# ============ LOGS ============
# Em servidor compartilhado, use um diretório dentro de public_html
LOG_LEVEL=error
LOG_PATH=./logs

# ============ REDIS (Opcional) ============
# Descomente se tiver Redis disponível
